Redirect 301 /tools/interview-prep.html /tools/tools.html
Redirect 301 /tools/visa-guide.html /tools/tools.html
Redirect 301 /tools/salary-calculator.html /tools/tools.html
Redirect 301 /tools/certification.html /tools/tools.html
Redirect 301 /tools/cultural-guide.html /tools/tools.html
