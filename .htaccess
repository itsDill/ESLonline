Redirect 301 /tools/vietnam-jobs.html /tools/jobs.html
Redirect 301 /tools/cambodia-jobs.html /tools/jobs.html
Redirect 301 /tools/malaysia-jobs.html /tools/jobs.html
Redirect 301 /tools/indonesia-jobs.html /tools/jobs.html
Redirect 301 /tools/philippines-jobs.html /tools/jobs.html

# Tools pages that don't exist - redirect to appropriate pages
