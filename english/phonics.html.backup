      function getNewWord() {
        currentWord = (currentWord + 1) % practiceWords.length;
        const word = practiceWords[currentWord];
        document.getElementById("practiceWord").textContent = word.word;
        document.getElementById("practiceIPA").textContent = word.ipa;
