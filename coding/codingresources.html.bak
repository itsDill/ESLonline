    <script>
      // Code Playground Functions
      let currentLanguage = "python";

      const examples = {
        python: {
          1: `# Variables - storing information
name = "Coder"
age = 12
print("Hello", name)
print("You are", age, "years old")`,
          2: `# Math operations
x = 10
y = 5
print("Sum:", x + y)
print("Difference:", x - y)
print("Product:", x * y)
print("Division:", x / y)`,
          3: `# Loops - repeating actions
for i in range(5):
    print("Count:", i)

print("Blast off! üöÄ")`,
          4: `# Decision making
temperature = 75

if temperature > 80:
    print("It's hot! ‚òÄÔ∏è")
elif temperature > 60:
    print("Nice weather! üòä")
else:
    print("It's cold! ‚ùÑÔ∏è")`,
        },
        javascript: {
          1: `// Variables - storing information
let name = "Coder";
let age = 12;
console.log("Hello", name);
console.log("You are", age, "years old");`,
          2: `// Math operations
let x = 10;
let y = 5;
console.log("Sum:", x + y);
console.log("Difference:", x - y);
console.log("Product:", x * y);
console.log("Division:", x / y);`,
          3: `// Loops - repeating actions
for (let i = 0; i < 5; i++) {
    console.log("Count:", i);
}
console.log("Blast off! üöÄ");`,
          4: `// Decision making
let temperature = 75;

if (temperature > 80) {
    console.log("It's hot! ‚òÄÔ∏è");
} else if (temperature > 60) {
    console.log("Nice weather! üòä");
} else {
    console.log("It's cold! ‚ùÑÔ∏è");
}`,
        },
        html: {
          1: `<!-- HTML Variables (sort of) -->
<div>
  <h1 id="name">Coder</h1>
  <p id="age">12</p>
</div>`,
          2: `<!-- HTML Math Display -->
<div>
  <p>10 + 5 = <span>15</span></p>
  <p>10 - 5 = <span>5</span></p>
  <p>10 √ó 5 = <span>50</span></p>
</div>`,
          3: `<!-- HTML Lists -->
<ul>
  <li>Count: 0</li>
  <li>Count: 1</li>
  <li>Count: 2</li>
  <li>Count: 3</li>
  <li>Count: 4</li>
</ul>`,
          4: `<!-- HTML Conditional Content -->
<div>
  <p class="hot">It's hot! ‚òÄÔ∏è</p>
  <p class="nice" style="display:none">Nice weather!</p>
  <p class="cold" style="display:none">It's cold! ‚ùÑÔ∏è</p>
</div>`,
        },
      };

      function switchLanguage(lang) {
        currentLanguage = lang;

        // Update tab styles
        document.querySelectorAll(".code-tab").forEach((tab) => {
          tab.classList.remove("active-tab");
          tab.style.background = "#334155";
          tab.style.color = "#94a3b8";
        });

        document.getElementById(`tab-${lang}`).classList.add("active-tab");

        // Update default code
        if (lang === "python") {
          document.getElementById("code-input").value = `print("Hello, World!")
print("Welcome to coding!")
print("2 + 2 =", 2 + 2)`;
        } else if (lang === "javascript") {
          document.getElementById(
            "code-input"
          ).value = `console.log("Hello, World!");
console.log("Welcome to coding!");
console.log("2 + 2 =", 2 + 2);`;
        } else {
          document.getElementById("code-input").value = `<!DOCTYPE html>
<html>
<head>
  <title>My Page</title>
                <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="../css/main.css?v=1763019900" />
    <link rel="stylesheet" href="../css/header.css?v=1763019900" />
    <link rel="stylesheet" href="../css/hero-unified.css?v=1763019900" />
    <link rel="stylesheet" href="../css/index-page.css?v=1763019900" />
    <link rel="stylesheet" href="../css/codingresources-page.css?v=1763019900" />
    <link rel="stylesheet" href="../css/mobile-optimized.css?v=1763019900" />
    <link rel="stylesheet" href="../css/mobile-menu.css?v=1763019900" />
    <link rel="stylesheet" href="../css/layout-fixes.css?v=1763019900" />
    </head>
<body>
  <h1>Hello, World!</h1>
  <p>Welcome to coding!</p>
</body>
</html>`;
        }

        clearOutput();
      }

      function runCode() {
        const code = document.getElementById("code-input").value;
        const output = document.getElementById("code-output");

        if (currentLanguage === "html") {
          output.innerHTML =
            '<div style="border: 2px solid #e2e8f0; padding: 1rem; border-radius: 8px; background: #fff;">' +
            code +
            "</div>";
          return;
        }

        // For demo purposes - simulated output
        output.textContent =
          "‚ö†Ô∏è This is a demo playground!\nFor real code execution, try:\n‚Ä¢ Python: repl.it or python.org\n‚Ä¢ JavaScript: Your browser console (F12)\n\nYour code looks good! üéâ";
        output.style.color = "#0ea5e9";
      }

      function clearOutput() {
        document.getElementById("code-output").textContent =
          'Click "Run Code" to see your results here! üöÄ';
        document.getElementById("code-output").style.color = "#64748b";
      }

      function loadExample(num) {
        const code = examples[currentLanguage][num];
        if (code) {
          document.getElementById("code-input").value = code;
          document.getElementById("code-output").textContent =
            'Click "Run Code" to see this example in action! üöÄ';
        }
      }

      // Progress Tracker
      document.addEventListener("DOMContentLoaded", function () {
        const checkboxes = document.querySelectorAll(".progress-check");
        const progressMessage = document.getElementById("progress-message");
        const progressCount = document.getElementById("progress-count");

        // Load saved progress from localStorage
        checkboxes.forEach((checkbox, index) => {
          const saved = localStorage.getItem(`progress-${index}`);
          if (saved === "true") {
            checkbox.checked = true;
          }
        });

        updateProgress();

        checkboxes.forEach((checkbox, index) => {
          checkbox.addEventListener("change", function () {
            localStorage.setItem(`progress-${index}`, checkbox.checked);
            updateProgress();

            if (checkbox.checked) {
              // Celebration animation
              checkbox.parentElement.style.background = "#dcfce7";
              checkbox.parentElement.style.border = "2px solid #10b981";
              setTimeout(() => {
                checkbox.parentElement.style.border = "none";
              }, 1000);
            } else {
              checkbox.parentElement.style.background = "#f9fafb";
            }
          });
        });

        function updateProgress() {
          const checked = Array.from(checkboxes).filter(
            (cb) => cb.checked
          ).length;
          progressCount.textContent = checked;

          if (checked > 0) {
            progressMessage.style.display = "block";
          } else {
            progressMessage.style.display = "none";
          }
        }
      });

      // Enhanced loading animations
      document.addEventListener("DOMContentLoaded", function () {
        // Animate on scroll
        const animateOnScrollElements =
          document.querySelectorAll(".animate-on-scroll");

        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add("visible");
              }
            });
          },
          {
            threshold: 0.1,
            rootMargin: "0px 0px -50px 0px",
          }
        );

        animateOnScrollElements.forEach((el) => observer.observe(el));

        // Add loading animation delay to cards
        const resourceCards = document.querySelectorAll(".resource-card");
        resourceCards.forEach((card, index) => {
          card.style.animationDelay = `${index * 0.1}s`;
          card.classList.add("fade-in-up");
        });

        // Enhanced hover effects for better UX
        resourceCards.forEach((card) => {
          card.addEventListener("mouseenter", () => {
            card.style.transform = "translateY(-8px) scale(1.02)";
          });

          card.addEventListener("mouseleave", () => {
            card.style.transform = "translateY(0) scale(1)";
          });
        });
      });

      // Add loading state management
      window.addEventListener("load", () => {
        document.body.classList.add("loaded");

        // Remove loading indicators if any exist
        const loadingElements = document.querySelectorAll(".loading");
        loadingElements.forEach((el) => el.classList.remove("loading"));
      });

      // Ensure responsive behavior
      let resizeTimer;
      window.addEventListener("resize", () => {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(() => {
          // Recalculate any layout dependent features
          const navLinks = document.getElementById("navLinks");
          if (window.innerWidth > 768 && navLinks) {
            navLinks.classList.remove("active");
          }
        }, 150);
      });
    </script>
